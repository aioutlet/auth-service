# =============================================================================
# Auth Service Environment Configuration Template
# =============================================================================
# This file serves as a template for creating environment-specific .env files
# Copy this file and rename it to .env, then fill in the appropriate values

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development # development | production | test
PORT=3001
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug # error | warn | info | http | verbose | debug | silly
LOG_FORMAT=console # console | json
LOG_TO_CONSOLE=true # true | false
LOG_TO_FILE=true # true | false
LOG_FILE_PATH=./logs/auth-service.log

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port]/database[?options]
# Examples:
#   Local: mongodb://admin:admin123@localhost:27021/auth_service_db?authSource=admin
#   Atlas: mongodb+srv://username:password@cluster.mongodb.net/auth_service_db
#   Docker: mongodb://admin:admin123@mongodb:27017/auth_service_db?authSource=admin
MONGODB_URI=mongodb://username:password@localhost:27021/auth_service_db?authSource=admin

# =============================================================================
# Service Discovery
# =============================================================================
USER_SERVICE_URL=http://localhost:3002/api/users
ADMIN_SERVICE_URL=http://localhost:3010/api/admin
AUDIT_SERVICE_URL=http://localhost:9000/api/audit
MESSAGE_BROKER_SERVICE_URL=http://localhost:4000

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-jwt-secret-key-at-least-256-bits-long

# =============================================================================
# Email Configuration
# =============================================================================
# Email service for password reset and notifications
# For local/dev: Use Mailpit (SMTP on localhost:1025, Web UI at localhost:8025)
# For production: Use SendGrid, AWS SES, or other transactional email service
EMAIL_PROVIDER=smtp # smtp | sendgrid | ses
EMAIL_FROM=noreply@aioutlet.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false # true | false
SMTP_USER=
SMTP_PASS=

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010

# =============================================================================
# Observability Configuration  
# =============================================================================
ENABLE_TRACING=true # true | false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
CORRELATION_ID_HEADER=x-correlation-id
