# =============================================================================
# Auth Service Production Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to production infrastructure
# Copied to .env automatically by scripts/deploy.sh production

# Service Configuration
NODE_ENV=production
PORT=3001
SERVICE_NAME=auth-service

# Database Configuration (connects to production Docker infrastructure)
MONGODB_URI=mongodb://admin:CHANGE_ME_SECURE_MONGODB_PASSWORD@localhost:27020/auth_service_prod_db?authSource=admin

# Service Discovery (connects to other services)
USER_SERVICE_URL=http://localhost:3002
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# Message Broker (connects to production Docker infrastructure)
RABBITMQ_URL=amqp://admin:CHANGE_ME_SECURE_RABBITMQ_PASSWORD@localhost:5674

# Cache (connects to production Docker infrastructure)  
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD@localhost:6381/3

# Security Configuration
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_AT_LEAST_256_BITS_LONG
JWT_EXPIRE=4h
JWT_REFRESH_EXPIRE=7d
BCRYPT_SALT_ROUNDS=14
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET

# OAuth Configuration (for production)
GOOGLE_CLIENT_ID=CHANGE_ME_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_PRODUCTION_GOOGLE_CLIENT_SECRET
FACEBOOK_APP_ID=CHANGE_ME_PRODUCTION_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=CHANGE_ME_PRODUCTION_FACEBOOK_APP_SECRET

# Email Configuration (for production)
EMAIL_SERVICE=ses
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=CHANGE_ME_PRODUCTION_EMAIL_PASSWORD

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Production Settings
DEBUG=false
LOG_LEVEL=info
