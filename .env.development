# Development Environment Configuration for Auth Service
NODE_ENV=development
SERVICE_NAME=auth-service
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_FILE=false
LOG_TO_CONSOLE=true
LOG_FILE_PATH=auth-service.log

# Port configuration
PORT=4000

# Database configuration - MongoDB
MONGODB_URI=mongodb://useradmin:userpassword@localhost:27018/auth-service-db
DB_NAME=auth-service-db
DB_USER=useradmin
DB_PASSWORD=userpassword
DB_HOST=localhost
DB_PORT=27018

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-development
JWT_EXPIRES_IN=1d

# Session configuration
SESSION_SECRET=your-session-secret-development

# CORS configuration
CORS_ORIGIN=http://localhost:3000
