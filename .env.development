# =============================================================================
# Auth Service Development Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to development infrastructure
# Copied to .env automatically by scripts/deploy.sh development

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0-dev

# =============================================================================
# Database Configuration
# =============================================================================
# Connects to development infrastructure - dedicated auth service database
MONGODB_URI=mongodb://admin:admin_dev_secure_789@localhost:27019/auth_service_dev_db?authSource=admin

# =============================================================================
# Service Discovery
# =============================================================================
# Development infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to development Docker infrastructure
RABBITMQ_URL=amqp://admin:rabbitmq_dev_secure_654@localhost:5673

# =============================================================================
# Cache Configuration
# =============================================================================
# Connects to development Docker infrastructure - uses Redis database 3
REDIS_URL=redis://:redis_dev_secure_pass_321@localhost:6380/3

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=dev-7a9f2d84b3c6e1f8a5d7c2b9e6f4a1d8c5b2e9f6a3d0c7b4e1f8a5d2c9b6e3f0a7
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=dev-super-secure-session-secret-for-development-environment

# =============================================================================
# OAuth Configuration
# =============================================================================
# Third-party authentication providers (development)
GOOGLE_CLIENT_ID=your-dev-google-client-id
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret
FACEBOOK_APP_ID=your-dev-facebook-app-id
FACEBOOK_APP_SECRET=your-dev-facebook-app-secret

# =============================================================================
# Email Configuration
# =============================================================================
# Email service for password reset and notifications (development)
EMAIL_SERVICE=gmail
EMAIL_USER=dev-email@yourdomain.com
EMAIL_PASS=dev-app-password

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/auth-service-development.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id
